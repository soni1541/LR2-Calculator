<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_rowSpan="2"
    android:layout_columnSpan="2"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_fio"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:text="Казунина Софья Т-303901 ИСиТ"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="67dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_fio">

        <Button
            android:id="@+id/button_plus"
            android:layout_width="74dp"
            android:layout_height="97dp"
            android:onClick="Onclick_button_sum"
            android:text="+"
            app:layout_column="0"
            app:layout_columnSpan="0"
            app:layout_row="1"
            app:layout_rowSpan="2" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Onclick_button_minus"
            android:text="-"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Onclick_button_del"
            android:text="/"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_multi"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:onClick="Onclick_button_multi"
            android:text="*"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_row="2"
            app:layout_rowSpan="2" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="251dp"
            android:layout_height="wrap_content"
            android:text="C"
            app:layout_column="0"
            app:layout_columnSpan="3"
            app:layout_row="4"
            app:layout_rowSpan="3" />

        <EditText
            android:id="@+id/editTextNumber1"
            android:layout_width="76dp"
            android:layout_height="58dp"
            android:ems="10"
            android:inputType="number"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView2_operation"
            android:layout_width="32dp"
            android:layout_height="28dp"
            android:text=" "
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="0" />

        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="77dp"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="number"
            android:textSize="20sp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp"
            app:layout_column="2"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>